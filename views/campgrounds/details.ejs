<%- layout('./layouts/boilerplate') %>

    <div class="row">
        <div class="col-6 mt-2">
            <div class="card mb-2">
                <img src=<%=camp.image%> class="card-img-top" alt="...">
                <div class="card-body">
                    <h5 class="card-title">
                        <%=camp.title%>
                    </h5>
                    <p class="card-text">
                        <%=camp.description%>
                    </p>
                </div>
                <ul class="list-group list-group-flush">
                    <li class="list-group-item">
                        <h5>Location</h5>
                        <div>
                            <p>
                                <%=camp.location%>
                            </p>
                        </div>
                    </li>
                    <li class="list-group-item">
                        <h5>Price</h5>
                        <div class="card-text">
                            <p>
                                $<%=camp.price%>/Night
                            </p>
                        </div>
                    </li>
                </ul>

                <div class="card-body">
                    <a href="/campgrounds/<%=camp._id%>/edit" class="card-link btn btn-primary">Edit Campground</a>
                    <form class="d-inline" action="/campgrounds/<%=camp._id%>?_method=DELETE" method="POST">
                        <button class="btn btn-danger">Delete Campground</button>
                    </form>
                </div>
            </div>

        </div>
        <div class="col-6">
            <div>
                <h3 class="mt-3">Want to leave a review?</h3>
            </div>
            <form action="/campgrounds/<%=camp._id%>/reviews" method="POST" novalidate class="validated-form">
                <div>
                    <div class="mb-3">
                        <label class='form-label' for="rating">Rating</label>
                        <input class='form-range' type="range" name="review[rating]" id="rating" min="1" max="5"
                            required>
                    </div>
                </div>
                <div class="mb-3">
                    <label class='form-label' for="body">Review</label>
                    <textarea class='form-control' name="review[body]" id="body" cols="30" rows="3" required></textarea>
                    <div class="valid-feedback">
                        Looks good!
                    </div>
                </div>

                <button class="btn btn-success">Submit</button>
            </form>
            <div class="my-3">
                <% for(let review of camp.reviews) { %>
                    <div class="card">
                        <div class='mb-3'>
                            <div class="card-body">
                                <h5 class="card-title"> Rating: <%=review.rating%>
                                </h5>
                                <p class="card-text">
                                    <%=review.body%>
                                </p>
                                <form action="/campgrounds/<%=camp._id%>/reviews/<%=review._id%>?_method=DELETE"
                                    method="POST">
                                    <button class="btn btn-sm btn-danger">Delete</button>
                                </form>
                            </div>
                        </div>
                    </div>

                    <%}%>
            </div>
        </div>
    </div>
    </div>
